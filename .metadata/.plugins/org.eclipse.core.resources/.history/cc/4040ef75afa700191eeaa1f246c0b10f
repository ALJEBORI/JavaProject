import java.util.Scanner;
public class JoueX {

	public static void main(String[] args) {
		int ro=0,col=0;
		String myIp;
		Scanner Scanner = new Scanner(System.in);
		System.out.println("Bienvenue sur Puissance 4!");
		System.out.println("Choisissez un nombre de lignes et de colonnes pour votre partie s'il vous plait (nombre de lignes-nombre de colonnes)");
		myIp=Scanner.next();
		ro=Integer.parseInt(myIp.split("-")[0]);
		col=Integer.parseInt(myIp.split("-")[1]);
		System.out.println("Tour de joueur 1");
		System.out.println("Choisissez dans quelle colonne placer votre pion (entre 1 et  " + col +")");
		char [][]jouArray = new char [ro][col];
		for(int i=0;i<ro;i++) {
			for(int j=0;j<col;j++)
				jouArray[i][j]='*';
		}
		System.out.println("Grille en cours :");
		for(int i=0;i<ro;i++) {
			for(int j=0;j<col;j++)
				System.out.print(jouArray[i][j]+" ");
		System.out.println("");	
		}

		
	}

}
